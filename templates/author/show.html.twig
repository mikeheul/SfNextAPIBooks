{% extends 'base.html.twig' %}

{% block title %}Author - {{ author.firstname ~ ' ' ~ author.lastname }}{% endblock %}

{% block body %}

<div class="p-6 bg-gray-900 text-gray-100">

    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-400 mb-6">
        <ol class="list-none p-0 inline-flex">
            <li>
                <a href="/" class="text-blue-500 hover:text-blue-400">Home</a>
            </li>
            <li class="px-2 text-gray-600">/</li>
            <li>
                <a href="{{ path('app_authors') }}" class="text-blue-500 hover:text-blue-400">Authors</a>
            </li>
            <li class="px-2 text-gray-600">/</li>
            <li class="text-gray-200">{{ author.firstname ~ ' ' ~ author.lastname }}</li>
        </ol>
    </nav>

    <!-- Nom de l'auteur -->
    <h1 class="text-6xl font-bold text-white mb-6">
        {{ author.firstname ~ ' ' ~ author.lastname }}
    </h1>
    
    <!-- Section des livres -->
    <h2 class="text-2xl font-semibold text-gray-300 mb-4">Books</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {% for book in author.books %}
            <a href="{{ path('app_book_show', {id: book.id}) }}" class="group">
                <div class="flex gap-6 border border-gray-700 rounded-lg p-4 bg-gray-800 shadow hover:shadow-lg transition-transform duration-300">
                    <!-- Affichage de la couverture du livre avec une taille rÃ©duite (miniature) -->
                    <div class="mb-4">
                        <img src="https://marketplace.canva.com/EAFf0E5urqk/1/0/1003w/canva-blue-and-green-surreal-fiction-book-cover-53S3IzrNxvY.jpg" 
                            alt="Cover of {{ book.title }}" 
                            class="w-24 h-36 object-cover rounded-lg shadow-md">
                    </div>
                    <div>
                        <h3 class="text-lg font-medium text-gray-100 group-hover:text-blue-400">
                            {{ book.title }}
                        </h3>
                        <p class="text-sm text-gray-400 mt-1">{{ book.publishedDate }}</p>
                    </div>
                </div>
            </a>
        {% else %}
            <p class="text-gray-500">This author has not published any books yet.</p>
        {% endfor %}
    </div>
</div>

{% endblock %}
