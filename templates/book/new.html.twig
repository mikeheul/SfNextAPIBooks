{% extends 'base.html.twig' %}

{% block title %}Add Book{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-gray-900 text-gray-100 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center mb-6">Add a New Book</h1>

        <form method="post" class="space-y-6">
            {{ form_start(form) }}

            <!-- Title Field -->
            <div>
                {{ form_label(form.title, 'Book Title', {'label_attr': {'class': 'text-xl font-medium text-gray-300'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.title, {
                        'attr': {'class': 'w-full p-2 border border-gray-600 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                    }) }}
                </div>
                {{ form_errors(form.title) }}
            </div>

            <!-- Description Field -->
            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'text-xl font-medium text-gray-300'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.description, {
                        'attr': {'class': 'w-full p-2 border border-gray-600 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                    }) }}
                </div>
                {{ form_errors(form.description) }}
            </div>

            <!-- Published Date Field -->
            <div>
                {{ form_label(form.publishedDate, 'Published Date', {'label_attr': {'class': 'text-xl font-medium text-gray-300'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.publishedDate, {
                        'attr': {'class': 'w-full p-2 border border-gray-600 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                    }) }}
                </div>
                {{ form_errors(form.publishedDate) }}
            </div>

            <!-- Pages Field -->
            <div>
                {{ form_label(form.pages, 'Pages', {'label_attr': {'class': 'text-xl font-medium text-gray-300'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.pages, {
                        'attr': {'class': 'w-full p-2 border border-gray-600 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                    }) }}
                </div>
                {{ form_errors(form.pages) }}
            </div>

            <!-- Author Field (Dropdown) -->
            <div>
                {{ form_label(form.author, 'Author', {'label_attr': {'class': 'text-xl font-medium text-gray-300'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.author, {
                        'attr': {'class': 'w-full p-2 border border-gray-600 bg-gray-800 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}
                    }) }}
                </div>
                {{ form_errors(form.author) }}
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center">
                <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Add Book
                </button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
