{% extends 'base.html.twig' %}

{% block title %}Book - {{ book.title }}{% endblock %}

{% block body %}

<div class="p-6 bg-gray-900 text-gray-100">

    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-400 mb-6">
        <ol class="list-none p-0 inline-flex">
            <li>
                <a href="/" class="text-blue-500 hover:text-blue-400">Home</a>
            </li>
            <li class="px-2 text-gray-600">/</li>
            <li>
                <a href="{{ path('app_books') }}" class="text-blue-500 hover:text-blue-400">Books</a>
            </li>
            <li class="px-2 text-gray-600">/</li>
            <li class="text-gray-200">{{ book.title }}</li>
        </ol>
    </nav>

    <!-- Titre du livre -->
    <h1 class="text-6xl font-bold text-white mb-4">{{ book.title }}</h1>

    <!-- Afficher la couverture du livre -->
    <div class="flex flex-col md:flex-row gap-6 mb-6">
        <img src="https://marketplace.canva.com/EAFf0E5urqk/1/0/1003w/canva-blue-and-green-surreal-fiction-book-cover-53S3IzrNxvY.jpg" alt="Cover of {{ book.title }}" class="w-full max-w-xs rounded-lg shadow-md">
        <div>
            <p class="text-lg text-gray-400 mb-6"> 
                <a href="{{ path('app_author_show', {id: book.author.id}) }}" class="text-blue-500 hover:underline">
                    {{ book.author.firstname ~ ' ' ~ book.author.lastname }}
                </a>
            </p>
            <p class="text-lg text-gray-400 mb-6"> 
                {{ book.publishedDate }} <br>
                {{ book.pages }} pages
            </p>
        
            <!-- Description -->
            <div class="bg-gray-800 border border-gray-700 p-4 rounded-lg">
                <p class="text-gray-300 leading-relaxed">
                    {{ book.description }}
                </p>
            </div>
        </div>
    </div>

</div>

{% endblock %}
